            app:tint="#A5A5A5" />

        <ImageView
            android:id="@+id/star21"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:src="@drawable/star"
            android:tag="star3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="#A5A5A5" />

        <ImageView
            android:id="@+id/star22"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:src="@drawable/star"
            android:tag="star4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="#A5A5A5" />

        <ImageView
            android:id="@+id/star23"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:src="@drawable/star"
            android:tag="star5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="#A5A5A5" />

        <ImageView
            android:id="@+id/star24"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:src="@drawable/star"
            android:tag="star6"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="#A5A5A5" />

        <ImageView
            android:id="@+id/star25"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:src="@drawable/star"
            android:tag="star7"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="#A5A5A5" />

        <ImageView
            android:id="@+id/star26"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:src="@drawable/star"
            android:tag="star8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="#A5A5A5" />

        <ImageView
            android:id="@+id/star27"
            android:layout_width="45dp"
