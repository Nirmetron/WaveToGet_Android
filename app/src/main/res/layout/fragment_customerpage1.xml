<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomerPage">

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:elevation="7dp"
        android:src="@drawable/cog_grey"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/textView44"
        app:layout_constraintEnd_toEndOf="@+id/textView44"
        app:layout_constraintStart_toStartOf="@+id/textView44"
        app:layout_constraintTop_toTopOf="@+id/textView44" />

    <TextView
        android:id="@+id/textView44"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginStart="145dp"
        android:background="@drawable/rounded_corner_solid_4dp"
        android:backgroundTint="@color/white"
        android:elevation="6dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout2"
        app:layout_constraintStart_toStartOf="@+id/linearLayout2"
        app:layout_constraintTop_toTopOf="@+id/linearLayout2" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_weight="1.2"
            android:background="@drawable/rounded_corner_solid_4dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="Username"
            android:textColor="#FFFFFF"
            android:textSize="17sp" />

        <Button
            android:id="@+id/qrbtn"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0.2"
            android:background="@drawable/rounded_corner_solid_4dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:paddingLeft="3dp"
            android:paddingTop="4dp"
            android:paddingRight="3dp"
            android:paddingBottom="4dp"
            android:text="Invite"
            android:textColor="#FFFFFF"
            android:textSize="17sp" />

        <Button
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_weight="0.4"
            android:background="@drawable/rounded_corner_solid_4dp"
            android:lineSpacingExtra="8sp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:paddingLeft="8dp"
            android:paddingTop="4dp"
            android:paddingRight="8dp"
            android:paddingBottom="4dp"
            android:text="LOG OUT"
            android:textAlignment="textStart"
            android:textColor="#FFFFFF"
            android:textSize="17sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="6dp"
        android:elevation="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout2"
        app:layout_constraintTop_toTopOf="@+id/linearLayout2"
        app:srcCompat="@drawable/logout_white" />

    <LinearLayout
        android:id="@+id/starsholder"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/star"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:src="@drawable/star"
            android:tag="star0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="#A5A5A5" />

        <ImageView
            android:id="@+id/star19"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:padding="5dp"
