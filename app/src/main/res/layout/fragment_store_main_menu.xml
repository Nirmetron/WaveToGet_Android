<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view13"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:background="#DFDFDF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/view13"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/homeimg2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/home_grey" />

        <ImageView
            android:id="@+id/backimg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:visibility="gone"
            app:srcCompat="@drawable/back_grey" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/activityimg"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.492"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/activity_grey" />

            <TextView
                android:id="@+id/unreadcountstore"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="-6dp"
                android:layout_marginEnd="-12dp"
                android:background="@drawable/rounded_corner_solid_16dp"
                android:backgroundTint="@android:color/holo_red_dark"
                android:text="1"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@+id/activityimg"
                app:layout_constraintTop_toTopOf="@+id/activityimg" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/redeemimg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:visibility="gone"
            app:srcCompat="@drawable/redeem_grey" />

        <ImageView
            android:id="@+id/askimg2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/chat_grey" />

        <ImageView
            android:id="@+id/buyimg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/notes_grey" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/view13"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/homebtn2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:paddingTop="50dp"
            android:text="Home"
            android:textAllCaps="false"
            android:textColor="#8E8E93" />

        <Button
            android:id="@+id/storebackbtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:paddingTop="50dp"
            android:text="Back"
            android:textAllCaps="false"
            android:textColor="#8E8E93"
            android:visibility="gone" />

        <Button
            android:id="@+id/storeactivitybtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:paddingTop="50dp"
            android:text="Activity"
            android:textAllCaps="false"
            android:textColor="#8E8E93" />

        <Button
            android:id="@+id/askbtn2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:paddingTop="50dp"
            android:text="Ask me"
            android:textAllCaps="false"
            android:textColor="#8E8E93" />

        <Button
            android:id="@+id/storeredeembtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:paddingTop="50dp"
            android:text="Redeem"
            android:textAllCaps="false"
            android:textColor="#8E8E93"
            android:visibility="gone" />

        <Button
            android:id="@+id/storenotesbtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:paddingTop="50dp"
            android:text="Notes"
            android:textAllCaps="false"
            android:textColor="#8E8E93" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>